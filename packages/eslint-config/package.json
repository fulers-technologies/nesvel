{
  "name": "@nesvel/eslint-config",
  "version": "1.0.0",
  "description": "Shared ESLint configuration presets for the Nesvel monorepo",
  "private": true,
  "license": "MIT",
  "author": "Nesvel",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./base": "./src/base.ts",
    "./next-js": "./src/next.ts",
    "./react-internal": "./src/react-internal.ts",
    "./nestjs": "./src/nestjs.ts"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "eslint",
    "config",
    "linting",
    "preset"
  ],
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^6.9.3",
    "@eslint/js": "catalog:lint",
    "@next/eslint-plugin-next": "^16.0.1",
    "eslint": "catalog:lint",
    "eslint-config-prettier": "catalog:lint",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-turbo": "^2.5.8",
    "globals": "catalog:lint",
    "prettier": "catalog:lint",
    "typescript": "catalog:typescript",
    "typescript-eslint": "catalog:lint"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.1"
}
