{
  "name": "@nesvel/shared",
  "version": "1.0.0",
  "description": "Shared utilities for Nesvel monorepo",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "build:watch": "tsc --watch",
    "lint:fix": "eslint src/**/*.ts --fix",
    "check-types": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "figlet": "^1.9.3"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.2"
}
