{
  "extends": "@nesvel/typescript-config/base",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@abstract/*": ["./src/abstract/*"],
      "@abstract": ["./src/abstract"],
      "@constants/*": ["./src/constants/*"],
      "@constants": ["./src/constants"],
      "@enums/*": ["./src/enums/*"],
      "@enums": ["./src/enums"],
      "@types/*": ["./src/types/*"],
      "@types": ["./src/types"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
