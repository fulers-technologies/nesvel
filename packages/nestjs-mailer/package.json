{
  "name": "@nesvel/nestjs-mailer",
  "version": "1.0.0",
  "description": "A flexible and feature-rich NestJS mailer module with support for multiple transports (SMTP, SES, SendGrid, Mailgun, Postmark) and React email templates",
  "license": "MIT",
  "author": "Nesvel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@react-email/components": "^0.5.7",
    "@react-email/render": "^1.4.0",
    "@react-email/tailwind": "^1.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "locter": "^2.2.0",
    "nodemailer": "^7.0.10",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "react-intl": "^7.1.14"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/config": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*",
    "@nestjs/common": "catalog:nestjs",
    "@nestjs/config": "catalog:nestjsModules",
    "@nestjs/core": "catalog:nestjs",
    "@nestjs/testing": "catalog:nestjsCli",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "catalog:types",
    "@types/react-dom": "catalog:types",
    "reflect-metadata": "catalog:nestjs",
    "rxjs": "catalog:nestjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.1",
  "keywords": [
    "nestjs",
    "mailer",
    "email",
    "nodemailer",
    "smtp",
    "ses",
    "sendgrid",
    "mailgun",
    "postmark",
    "react-email",
    "templates"
  ]
}
