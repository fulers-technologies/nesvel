{
  "extends": "@nesvel/typescript-config/nest-lib",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "paths": {
      "@*": ["./*"],
      "@types/*": ["./types/*"],
      "@enums/*": ["./enums/*"],
      "@adapters/*": ["./adapters/*"],
      "@services/*": ["./services/*"],
      "@providers/*": ["./providers/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@exceptions/*": ["./exceptions/*"],
      "@markup/schemas/*": ["./markup/schemas/*"],
      "@markup/builders/*": ["./markup/builders/*"],

      // Resources aliases
      "@resources/*": ["./resources/*"],
      "@resources/i18n/*": ["./resources/i18n/*"],
      "@resources/utils/*": ["./resources/utils/*"],
      "@resources/emails/*": ["./resources/emails/*"],
      "@resources/layouts/*": ["./resources/layouts/*"],
      "@resources/providers/*": ["./resources/providers/*"],
      "@resources/components/*": ["./resources/components/*"],
      "@resources/interfaces/*": ["./resources/interfaces/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
