{
  "name": "@nesvel/nestjs-encryption",
  "version": "1.0.0",
  "description": "Laravel-inspired encryption module for NestJS with AES, GCM, and Sodium support",
  "license": "MIT",
  "author": "Nesvel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@nesvel/shared": "workspace:*",
    "@nesvel/exceptions": "workspace:*",
    "libsodium-wrappers": "^0.7.15"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0"
  },
  "devDependencies": {
    "@nesvel/typescript-config": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/eslint-config": "workspace:*",
    "@nestjs/testing": "^11.1.8",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^24.10.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "nestjs",
    "encryption",
    "aes",
    "gcm",
    "sodium",
    "crypto",
    "security",
    "laravel",
    "aead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nesvel/nesvel.git",
    "directory": "packages/framework/encryption"
  },
  "bugs": {
    "url": "https://github.com/nesvel/nesvel/issues"
  },
  "homepage": "https://github.com/nesvel/nesvel/tree/main/packages/framework/encryption#readme"
}
