{
  "name": "@nesvel/nestjs-i18n",
  "version": "1.0.0",
  "description": "Production-ready internationalization (i18n) module for NestJS applications with TypeScript support and multiple language resolvers",
  "license": "MIT",
  "author": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.config.js",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "nestjs-i18n": "^10.5.1"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nesvel/nestjs-http": "workspace:*",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  },
  "peerDependenciesMeta": {
    "class-validator": {
      "optional": true
    },
    "class-transformer": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/nestjs-http": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*",
    "@nestjs/common": "catalog:nestjs",
    "@nestjs/core": "catalog:nestjs",
    "@nestjs/testing": "catalog:nestjsCli",
    "@types/node": "catalog:types",
    "class-validator": "catalog:validation",
    "class-transformer": "catalog:validation",
    "reflect-metadata": "catalog:nestjs",
    "rxjs": "catalog:nestjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.2",
  "keywords": [
    "nestjs",
    "i18n",
    "internationalization",
    "localization",
    "translations",
    "multilingual",
    "language",
    "nestjs-i18n",
    "typescript"
  ]
}
