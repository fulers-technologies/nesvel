{
  "extends": "@nesvel/typescript-config/nest-lib",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@constants/*": ["./src/constants/*"],
      "@constants": ["./src/constants"],
      "@enums/*": ["./src/enums/*"],
      "@enums": ["./src/enums"],
      "@exceptions/*": ["./src/exceptions/*"],
      "@exceptions": ["./src/exceptions"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@interfaces": ["./src/interfaces"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
