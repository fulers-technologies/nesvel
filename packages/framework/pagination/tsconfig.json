{
  "extends": "@nesvel/typescript-config/nest-lib",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@interfaces": ["./src/interfaces"],
      "@paginators/*": ["./src/paginators/*"],
      "@paginators": ["./src/paginators"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
