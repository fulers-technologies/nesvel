{
  "name": "@nesvel/reactjs-di",
  "version": "1.0.0",
  "description": "A powerful, type-safe dependency injection library for React applications powered by Inversiland with built-in route management",
  "license": "MIT",
  "author": "Nesvel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "lint:fix": "eslint src/**/*.ts src/**/*.tsx --fix",
    "build:watch": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "inversiland": "^0.6.2",
    "reflect-metadata": "^0.2.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-router": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "react-router": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*",
    "@types/react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "packageManager": "bun@1.3.1",
  "keywords": [
    "react",
    "dependency-injection",
    "di",
    "ioc",
    "inversion-of-control",
    "inversiland",
    "typescript",
    "decorators",
    "hooks",
    "routing",
    "react-router",
    "modular",
    "architecture"
  ]
}
