{
  "name": "@nesvel/tsup-config",
  "version": "1.0.0",
  "description": "Shared tsup configuration presets for the Nesvel monorepo",
  "private": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "tsup",
    "config",
    "build",
    "typescript"
  ],
  "author": "Nesvel",
  "license": "MIT",
  "dependencies": {
    "tsup": "catalog:tsBuild"
  },
  "devDependencies": {
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*",
    "@types/node": "catalog:types",
    "eslint": "catalog:lint",
    "prettier": "catalog:lint",
    "typescript": "catalog:typescript"
  },
  "peerDependencies": {
    "tsup": ">=8.0.0"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.1"
}
