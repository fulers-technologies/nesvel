{
  "extends": "@nesvel/typescript-config/base",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@interfaces/*": ["./interfaces/*"],
      "@utils/*": ["./utils/*"],
      "@tests/*": ["../__tests__/*", "../test/*"],
      "@examples/*": ["../__examples__/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
