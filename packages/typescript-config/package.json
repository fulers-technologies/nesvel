{
  "name": "@nesvel/typescript-config",
  "version": "1.0.0",
  "description": "Shared TypeScript configuration presets for the Nesvel monorepo",
  "private": true,
  "license": "MIT",
  "author": "Nesvel",
  "files": [
    "src",
    "README.md"
  ],
  "exports": {
    "./base": "./src/base.json",
    "./base.json": "./src/base.json",
    "./next-js": "./src/nextjs.json",
    "./nextjs.json": "./src/nextjs.json",
    "./react-internal": "./src/react-library.json",
    "./react-library.json": "./src/react-library.json",
    "./nest-lib": "./src/nest-library.json",
    "./nest-library.json": "./src/nest-library.json",
    "./nest-app": "./src/nest-app.json",
    "./nest-app.json": "./src/nest-app.json"
  },
  "scripts": {
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "typescript",
    "tsconfig",
    "config",
    "preset"
  ],
  "devDependencies": {
    "prettier": "catalog:lint",
    "typescript": "catalog:typescript"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.1"
}
