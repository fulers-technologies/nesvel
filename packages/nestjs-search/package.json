{
  "name": "@nesvel/nestjs-search",
  "version": "1.0.0",
  "description": "Search engine integration for NestJS with Elasticsearch and Meilisearch support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nesvel-search": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nestjs",
    "search",
    "elasticsearch",
    "meilisearch",
    "full-text-search",
    "mikroorm"
  ],
  "author": "Nesvel",
  "license": "MIT",
  "peerDependencies": {
    "@mikro-orm/core": "^6.5.4",
    "@mikro-orm/nestjs": "^6.0.4",
    "@nestjs/common": "^11.1.7",
    "@nestjs/core": "^11.1.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "dependencies": {
    "@nesvel/nestjs-console": "workspace:*",
    "@nesvel/nestjs-orm": "workspace:*",
    "nest-commander": "^3.20.1"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "^9.2.0",
    "@nestjs/testing": "catalog:nestjsCli",
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*",
    "@types/jest": "catalog:types",
    "@types/node": "catalog:types",
    "esbuild-plugin-path-alias": "^1.0.7",
    "eslint": "catalog:lint",
    "jest": "catalog:testing",
    "jiti": "^2.6.1",
    "meilisearch": "^0.54.0",
    "prettier": "catalog:lint",
    "tsup": "catalog:tsBuild",
    "typescript": "catalog:typescript"
  },
  "peerDependenciesMeta": {
    "@elastic/elasticsearch": {
      "optional": true
    },
    "meilisearch": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
