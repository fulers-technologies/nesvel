{
  "extends": "@nesvel/typescript-config/nest-lib",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@constants/*": ["./constants/*"],
      "@enums/*": ["./enums/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
