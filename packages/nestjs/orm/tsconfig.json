{
  "extends": "@nesvel/typescript-config/nest-lib",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@actions/*": ["./src/actions/*"],
      "@actions": ["./src/actions"],
      "@console/*": ["./src/console/*"],
      "@console": ["./src/console"],
      "@entities/*": ["./src/entities/*"],
      "@entities": ["./src/entities"],
      "@enums/*": ["./src/enums/*"],
      "@enums": ["./src/enums"],
      "@events/*": ["./src/events/*"],
      "@events": ["./src/events"],
      "@exceptions/*": ["./src/exceptions/*"],
      "@exceptions": ["./src/exceptions"],
      "@factories/*": ["./src/factories/*"],
      "@factories": ["./src/factories"],
      "@indicators/*": ["./src/indicators/*"],
      "@indicators": ["./src/indicators"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@interfaces": ["./src/interfaces"],
      "@migrations/*": ["./src/migrations/*"],
      "@migrations": ["./src/migrations"],
      "@mixins/*": ["./src/mixins/*"],
      "@mixins": ["./src/mixins"],
      "@repositories/*": ["./src/repositories/*"],
      "@repositories": ["./src/repositories"],
      "@seeders/*": ["./src/seeders/*"],
      "@seeders": ["./src/seeders"],
      "@services/*": ["./src/services/*"],
      "@services": ["./src/services"],
      "@subscribers/*": ["./src/subscribers/*"],
      "@subscribers": ["./src/subscribers"],
      "@types/*": ["./src/types/*"],
      "@types": ["./src/types"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
