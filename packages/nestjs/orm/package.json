{
  "name": "@nesvel/nestjs-orm",
  "version": "1.0.0",
  "description": "A Laravel Eloquent-inspired ORM package for NestJS using MikroORM with fluent migrations and PubSub integration",
  "license": "MIT",
  "author": "Nesvel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nesvel-orm": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "build:watch": "tsup --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@mikro-orm/cli": "^6.5.9",
    "@mikro-orm/core": "^6.5.9",
    "@mikro-orm/seeder": "^6.5.9",
    "@mikro-orm/migrations": "^6.5.9",
    "@mikro-orm/mongodb": "^6.5.9",
    "@mikro-orm/mysql": "^6.5.9",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.5.9",
    "@mikro-orm/sqlite": "^6.5.9",
    "@nestjs/common": "catalog:nestjs",
    "@nestjs/core": "catalog:nestjs",
    "@nesvel/exceptions": "workspace:*",
    "@nesvel/nestjs-console": "workspace:*",
    "@nesvel/pagination": "workspace:*",
    "@nesvel/shared": "workspace:*",
    "ejs": "^3.1.10",
    "knex": "^3.1.0",
    "nest-commander": "^3.20.1",
    "reflect-metadata": "catalog:nestjs",
    "rxjs": "catalog:nestjs",
    "uuid": "^13.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "reflect-metadata": "^0.2.0"
  },
  "devDependencies": {
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*",
    "@types/ejs": "^3.1.5",
    "@types/uuid": "^11.0.0",
    "esbuild-plugin-path-alias": "^1.0.7",
    "tsc-alias": "^1.8.16"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.2",
  "keywords": [
    "nestjs",
    "orm",
    "mikroorm",
    "eloquent",
    "laravel",
    "database",
    "migration",
    "pubsub"
  ]
}
