{
  "name": "@nesvel/nestjs-health",
  "version": "1.0.0",
  "description": "Production-ready health check module for NestJS with support for database, memory, disk, and HTTP service monitoring. Includes Kubernetes-compatible liveness, readiness, and startup probes.",
  "license": "MIT",
  "author": "Nesvel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "dependencies": {},
  "peerDependencies": {
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  },
  "peerDependenciesMeta": {
    "@mikro-orm/core": {
      "optional": true
    },
    "@mikro-orm/nestjs": {
      "optional": true
    },
    "@nestjs/axios": {
      "optional": true
    },
    "axios": {
      "optional": true
    }
  },
  "devDependencies": {
    "@mikro-orm/core": "^6.5.9",
    "@mikro-orm/nestjs": "^6.1.1",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/common": "catalog:nestjs",
    "@nestjs/core": "catalog:nestjs",
    "@nestjs/swagger": "catalog:nestjsModules",
    "@nestjs/testing": "catalog:nestjsCli",
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*",
    "axios": "^1.13.2",
    "reflect-metadata": "catalog:nestjs",
    "rxjs": "catalog:nestjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.2",
  "keywords": [
    "nestjs",
    "health",
    "health-check",
    "healthcheck",
    "terminus",
    "kubernetes",
    "k8s",
    "liveness",
    "readiness",
    "startup",
    "probe",
    "monitoring",
    "database",
    "memory",
    "disk",
    "mikroorm",
    "swagger"
  ]
}
