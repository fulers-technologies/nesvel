{
  "name": "@nesvel/nestjs-logger",
  "version": "1.0.0",
  "description": "A comprehensive NestJS module for logging with pluggable driver support for Console, File, and Winston transports",
  "license": "MIT",
  "author": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.config.js",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@medusajs/telemetry": "^2.11.3",
    "@nestjs/event-emitter": "^2.1.0",
    "nest-winston": "^1.10.0",
    "stack-trace": "^1.0.0-pre2",
    "ts-mixer": "^6.0.4",
    "ulid": "^2.3.0",
    "winston": "^3.15.0",
    "winston-aws-cloudwatch": "^3.0.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-slack-hook": "^0.3.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/core": "^11.1.8",
    "@nesvel/conditionable": "workspace:*",
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/macroable": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/stack-trace": "^0.0.33",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.2",
  "keywords": [
    "nestjs",
    "logger",
    "logging",
    "winston",
    "console",
    "file",
    "structured-logging"
  ]
}
