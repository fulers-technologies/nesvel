{
  "name": "@nesvel/nestjs-orm",
  "version": "1.0.0",
  "description": "A Laravel Eloquent-inspired ORM package for NestJS using MikroORM with fluent migrations and PubSub integration",
  "license": "MIT",
  "author": "Nesvel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nesvel-orm": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "build:watch": "tsup --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.9.0",
    "@mikro-orm/core": "^5.9.8",
    "@mikro-orm/migrations": "^5.9.0",
    "@mikro-orm/mongodb": "^5.9.0",
    "@mikro-orm/mysql": "^5.9.0",
    "@mikro-orm/nestjs": "^5.2.3",
    "@mikro-orm/postgresql": "^5.9.0",
    "@mikro-orm/sqlite": "^5.9.0",
    "@nestjs/common": "catalog:nestjs",
    "@nestjs/core": "catalog:nestjs",
    "@nesvel/nestjs-console": "workspace:*",
    "@nesvel/shared": "workspace:*",
    "ejs": "^3.1.10",
    "figlet": "^1.7.0",
    "knex": "^3.1.0",
    "nest-commander": "^3.20.1",
    "nestjs-paginate": "^12.8.3",
    "reflect-metadata": "catalog:nestjs",
    "rxjs": "catalog:nestjs",
    "uuid": "^13.0.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "reflect-metadata": "^0.2.0"
  },
  "devDependencies": {
    "@nesvel/eslint-config": "workspace:*",
    "@nesvel/jest-config": "workspace:*",
    "@nesvel/tsup-config": "workspace:*",
    "@nesvel/typescript-config": "workspace:*",
    "@types/ejs": "^3.1.5",
    "@types/figlet": "^1.5.8",
    "@types/uuid": "^10.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "bun@1.3.1",
  "keywords": [
    "nestjs",
    "orm",
    "mikroorm",
    "eloquent",
    "laravel",
    "database",
    "migration",
    "pubsub"
  ]
}
