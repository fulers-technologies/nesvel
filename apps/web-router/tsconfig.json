{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@nesvel/typescript-config/react-library.json",
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "exclude": ["node_modules", "dist", "build", ".react-router", "coverage"],
  "compilerOptions": {
    // Runtime & Module Settings
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": ["node", "vite/client"],

    // JSX Settings for React
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    // Decorator Support for DI
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Path Resolution
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      // Root alias
      "~/*": ["./src/*"],

      // Module aliases
      "@modules/*": ["./src/modules/*"],
      "@config/*": ["./src/config/*"],
      "@pages/*": ["./src/pages/*"],
      "@routes/*": ["./src/routes/*"],

      // Common module shortcuts
      "@logger": ["./src/modules/logger/index.ts"],
      "@logger/*": ["./src/modules/logger/*"],
      "@user": ["./src/modules/user/index.ts"],
      "@user/*": ["./src/modules/user/*"],

      // DI shortcuts
      "@di": ["./src/di/index.ts"],
      "@di/*": ["./src/di/*"],

      // Type shortcuts
      "@types": ["./src/types/index.ts"],
      "@types/*": ["./src/types/*"],

      // Utility shortcuts
      "@utils": ["./src/utils/index.ts"],
      "@utils/*": ["./src/utils/*"],

      // Component shortcuts
      "@components": ["./src/components/index.ts"],
      "@components/*": ["./src/components/*"]
    },

    // Module Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,

    // Type Checking (Strict Mode)
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Additional Type Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Emit
    "noEmit": true,
    "sourceMap": true,

    // Interop Constraints
    "isolatedModules": true,
    "allowJs": false,
    "checkJs": false,

    // Advanced
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force"
  }
}
